<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_top">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="30dp">

        <TextView
            android:id="@+id/RtextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"/>

        <EditText
            android:id="@+id/R_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="10dp"
            android:hint="Last Name &amp; First Name"/>

        <TextView
            android:id="@+id/RtextPhonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone number"/>

        <EditText
            android:id="@+id/R_Mobile"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="10dp"
            android:hint="0211231234"/>
        

        <TextView
            android:id="@+id/RtextEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"/>

        <EditText
            android:id="@+id/R_Email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="10dp"
            android:hint="123@xxxx.com"/>

        <TextView
            android:id="@+id/RUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"/>
        <EditText
            android:id="@+id/R_Username"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/RtextPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"/>

        <EditText
            android:id="@+id/R_Password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="10dp"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/btn_Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/R_Password"
            android:layout_marginTop="15dp"
            android:text="Register"/>

        </LinearLayout>
    </FrameLayout>

</LinearLayout>
